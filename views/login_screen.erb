<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header">
		    <h4>Login</h4>
		</div>
		<div class="card-body">
			<% if @m != nil %>
				<div class='alert alert-danger' role='alert'>
					<%= @m %>
				</div>
			<% end %>
				<form method='post' action='/login'>
					<div class="col-lg-12">
						<input required type="text" class="form-control" placeholder="Login" name='login' aria-describedby="basic-addon3">
						<br>
						<input required class="form-control" placeholder="Password" type='password' name='password' aria-describedby="basic-addon3">
						<br>
						<button type='submit' class="btn btn-default">Send</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>