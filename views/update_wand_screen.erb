<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header bg-dark text-white">
		    <h4>Informações da Varinha</h4>
		</div>
		<div class="card-body">
			<% if @w != nil %>
				<div class='alert alert-warning' role='alert'>
					<%= @w %>
				</div>
			<% end %>
		    	<form method='post' action='/admin/update_wand/<%= @wand.id %>'>
					<div class="col-lg-12">
						<input value="<%= @wand.wood %>" type="text" class="form-control" placeholder="Madeira" name='wood' aria-describedby="basic-addon3">
						<input value="<%= @wand.flexibility %>"  class="form-control" placeholder="Flexibilidade" type='text' name='flexibility' aria-describedby="basic-addon3">
						<input value="<%= @wand.length %>"  class="form-control" placeholder="Comprimento (cm)" type='text' name='length' aria-describedby="basic-addon3">
						<input value="<%= @wand.core %>"  class="form-control" placeholder="Núcleo" type='text' name='core' aria-describedby="basic-addon3">
						<br>
						<button type='submit' class="btn btn-hg">Enviar</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>