
<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header bg-dark text-white">
		    <h4>Dados pessoais</h4>
		</div>
		<div class="card-body">
			<% if @e != nil %>
				<div class='alert alert-danger' role='alert'>
					<%= @e %>
				</div>
			<% end %>
			<% if @w != nil %>
				<div class='alert alert-warning' role='alert'>
					<%= @w %>
				</div>
			<% end %>
		    	<form method='post' action='/admin/update_wizard/<%=@wizard.id%>'>
					<div class="col-lg-12">
						<input value="<%=@wizard.name%>" type="text" class="form-control" placeholder="Nome" name='name' aria-describedby="basic-addon3">
						<input value="<%=@wizard.login%>" class="form-control" placeholder="Login" type='text' name='login' aria-describedby="basic-addon3">
						<input value="<%=@dateOfBirth%>" class="form-control" placeholder="Data de Nascimento (DD/MM/AAAA)" type='date' name='dateOfBirth' aria-describedby="basic-addon3">
						<br>
						<button type='submit' class="btn btn-hg">Enviar</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>
