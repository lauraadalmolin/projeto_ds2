

<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header bg-dark text-white">
		    <h4>Informações do Animal</h4>
		</div>
		<div class="card-body">
			<% if @s != nil %>
				<div class='alert alert-success' role='alert'>
					<%= @s %>
				</div>
			<% end %>
			<% if @e != nil %>
				<div class='alert alert-danger' role='alert'>
					<%= @e %>
				</div>
			<% end %>
			<% if @w != nil %>
				<div class='alert alert-warning' role='alert'>
					<%= @w %>
				</div>
			<% end %>
		    	<form method='post' action='/admin/update_animal/<%=@animal.id%>' enctype='multipart/form-data'>
					<div class="col-lg-12">
						<input type="text" class="form-control" placeholder="Espécie" name='species' value="<%= @animal.species %>"aria-describedby="basic-addon3">
						<input class="form-control" placeholder="Nome" type='text' name='name' value="<%= @animal.name %>" aria-describedby="basic-addon3">
						Imagem do Animal:
					  	<input type='file' name='file' value="../images/animals/<%=@animal.id%>.jpg">
						<br>
						<button type='submit' class="btn btn-hg">Enviar</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>