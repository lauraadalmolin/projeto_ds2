
<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header bg-dark text-white">
		    <h4>Informações da Pergunta</h4>
		</div>
		<div class="card-body">
			<% if @s != nil %>
				<div class='alert alert-success' role='alert'>
					<%= @s %>
				</div>
			<% end %>
			<% if @e != nil %>
				<div class='alert alert-danger' role='alert'>
					<%= @e %>
				</div>
			<% end %>
			<% if @w != nil %>
				<div class='alert alert-warning' role='alert'>
					<%= @w %>
				</div>
			<% end %>
		    	<form method='post' action='/admin/update_answer/<%=@answer.id%>'>
					<div class="col-lg-12">
						Selecione uma pergunta:
						<br>
						<select class="custom-select" name='question_id'>
							<% @questionArr.each do |question| %>
								<% if (question.id == @answer.question.id) %>
									<option selected value="<%= question.id%>"><%=question.description%></option>
								<% else %>
									<option value="<%= question.id%>"><%=question.description%></option>
								<% end %>
							<% end %>
						</select>
						<br>
						<br>
						Selecione uma cor:
						<br>	
						<br>	
						<% arr=['#468189 blue_a', '#ffcdb2 pale_pink_a', '#1e3231 weird_black_a', '#eb8258 salmon_a', '#6b2737 purpleish_a', '#2e294e eggplant_a', '#7fb685 light_green_a', '#dbad6a sand_a', '#e13700 coral_a', '#9e7b9b lavender_a', '#b2ebf2 light_blue_a'] %>
						<% arr.each do |color_info| %>
							<% boom = color_info.split %>
							<div class='row'>
								<div class='col-md-1 text-right'>
									<% if boom[1] == @answer.color %>
										<input checked type='radio' name='color' value='<%=boom[1]%>'> 
									<% else %>
										<input type='radio' name='color' value='<%=boom[1]%>'> 
									<% end %> 
								</div>
								<div style="background-color: <%=boom[0]%> !important;" class='col-md-1'>
									<p style="color: <%=boom[0]%> !important;"></p>
								</div>
							</div>
						<% end %>
						<br>
						<input value="<%=@answer.description%>" type="text" class="form-control" placeholder="Resposta" name='description' aria-describedby="basic-addon3">
						<input value="<%=@answer.gryffindorValue%>" type="number" class="form-control" placeholder="Pontos para Grifinória" name='gryffindorValue' aria-describedby="basic-addon3">
						<input value="<%=@answer.slytherinValue%>" type="number" class="form-control" placeholder="Pontos para Sonserina" name='slytherinValue' aria-describedby="basic-addon3">
						<input value="<%=@answer.ravenclawValue%>" type="number" class="form-control" placeholder="Pontos para Corvinal" name='ravenclawValue' aria-describedby="basic-addon3">
						<input value="<%=@answer.hufflepuffValue%>" type="number" class="form-control" placeholder="Pontos para Lufa-lufa" name='hufflepuffValue' aria-describedby="basic-addon3">
						<br>
						<button type='submit' class="btn btn-hg">Adicionar</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>
