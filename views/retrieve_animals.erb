					  			<a href="/admin/update_animal/<%= animal.id%>"><img src="../images/icons/edit1.png"></a>
					  			<a href="/admin/delete_animal/<%= animal.id%>"><img src="../images/icons/delete1.png"></a>
					  		</div>
					    	<p class="card-text">Esp√©cie: <%= animal.species %></p>
					    	<p class="card-text">Nome: <%= animal.name %></p>
					  	</div>
					</div> 
				</div> 
			<% end %>
		<% end %>
				</div>
			</div>
		</div>
		</div>
	</div>
</div>
