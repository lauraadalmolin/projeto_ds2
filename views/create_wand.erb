
<div class="row">
	<div class="col-md-12">
		<div class="card">
  		<div class="card-header">
		    <h4>Wand Information</h4>
		</div>
		<div class="card-body">
			<% if @s != nil %>
				<div class='alert alert-success' role='alert'>
					<%= @s %>
				</div>
			<% end %>
			<% if @e != nil %>
				<div class='alert alert-danger' role='alert'>
					<%= @e %>
				</div>
			<% end %>
		    	<form method='post' action='/admin/create_wand'>
					<div class="col-lg-12">
						<input type="text" class="form-control" placeholder="Wood" name='wood' aria-describedby="basic-addon3">
						<input class="form-control" placeholder="Flexibility" type='text' name='flexibility' aria-describedby="basic-addon3">
						<input class="form-control" placeholder="Length" type='text' name='length' aria-describedby="basic-addon3">
						<input class="form-control" placeholder="Core" type='text' name='core' aria-describedby="basic-addon3">
						<br>
						<button type='submit' class="btn btn-default">Send</button>									  
					</div>	
				</form>
		  	</div>
		</div>
	</div>
</div>